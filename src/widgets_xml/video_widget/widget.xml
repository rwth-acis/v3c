<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Video</title>

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

  <!-- Bootstrap stylesheet import -->
  <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <!-- import jQuery for AJAX calls -->
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <!-- import Bootstrap for responsive UI -->
  <script type="text/javascript" src="https://netdna.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  <!-- OpenApp import -->
  <script type="text/javascript" src="http://open-app.googlecode.com/files/openapp.js"></script>
  <!-- additional widget specific imports (put your own imports here as well) -->
  <script src="http://virtus-vet.eu/src/widgets_xml/video_widget/js/jwplayer/jwplayer.js"></script>

  <script src="http://virtus-vet.eu/src/widgets_xml/widgets_common.js"></script>

</head>
<body>

  <style>
    h3 {
      margin: 0;
      padding: 1em;
      background:#222;
      color:white;
    }

    .expand {
      width:100%;
      height:90%;
    }
  </style>

  <!-- container for actual page content -->
  <div class="container" id="main-content">
    <h3 class='title'></h3>
    <div id='player' class='expand'>Loading...</div>
  </div>

  <script>
    function loadVideo(widget_role_url, lang) {
     var jqxhr = $.ajax( "http://virtus-vet.eu/src/php/widget_data_video.php?widget_role_url=" + encodeURI(widget_role_url) + "&lang=" + lang )
     .done(function(data) {
       data = JSON.parse(data);
       $('.title').html(data.title);
       playbackVideo(data.link);
     })
     .fail(function() {
         $("#main-content").html("Could not load the video.");
     });
    }

    function playbackVideo(videoUrl){
      // updateds "player" html element
      jwplayer("player").setup({
        width: 700,
        height: 500,
        file: videoUrl
      });
    }

    loadVideo(getWidgetInstanceUrl(), getUserLanguage());
  </script>

</body>
</html>

